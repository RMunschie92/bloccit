<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <h2>Posts</h2>
 <% if user_has_posts?(@user) %>
   <%= render @user.posts %>
 <% else %>
   <p>
     <%= @user.name %> has not submitted any posts yet.
   </p>
 <% end %>


 <h2>Comments</h2>
 <% if user_has_comments?(@user) %>
   <%= render @user.comments %>
 <% else %>
   <p>
     <%= @user.name %> has not submitted any posts yet.
   </p>
 <% end %>

 <h2>Favorites</h2>
  <% if user_has_favorites?(@user) %>
    <% @user.favorites.each do |fav| %>
      <div class="row favorite_item">
        <% author_avatar_url = fav.post.user.avatar_url(36) %>
        <div class="col-md-3">
          Post: <%= fav.post.title %>
        </div>
        <div class="col-md-1">
          <%= image_tag author_avatar_url%>
        </div>
        <div class="col-md-1">
          Votes: <%= fav.post.votes.count %>
        </div>
        <div class="col-md-2">
          Comments: <%= fav.post.comments.count %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= @user.name %> has not favorited any posts yet.
  <% end %>
